{
    "compilerOptions": {
        "module": "amd",
        "sourceMap": false,
        "jsx": "react",
        "jsxFactory": "tsx",
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2015.iterable",
            "es2015.promise",
            "es5"
        ]
    },
    "include": [
        "src/floorSwitcherTool.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}